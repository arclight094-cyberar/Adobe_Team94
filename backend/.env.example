# Server Configuration
NODE_ENV=development
PORT=4000

# MongoDB Database
# Option A: If using MongoDB Atlas (cloud)
MONGODB_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@cluster0.xxxxx.mongodb.net/adobe-ps-clone?retryWrites=true&w=majority

# Option B: If using local MongoDB
# MONGODB_URI=mongodb://localhost:27017/adobe-ps-clone

# JWT Secret (for authentication)
# Generate a random string - you can use: https://randomkeygen.com/
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRES_IN=30d

# Cloudinary (Image Storage)
# Get these from: https://cloudinary.com/
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Gemini AI (for AI features)
# Get this from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Email (Optional - for OTP verification)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

